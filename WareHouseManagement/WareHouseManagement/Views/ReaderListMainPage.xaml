<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WareHouseManagement.Views.ReaderListMainPage"
               xmlns:local1="clr-namespace:WareHouseManagement.ViewModels">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{x:Static local1:PageDataViewModel.All}"
              ItemSelected="OnListViewItemSelected" RowHeight="100" SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame HasShadow="True" Padding="10" Margin="5">
                                <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">
                                    <Label Text="{Binding Title}" TextColor="Accent"/>
                                    <Label Text="{Binding Description}"/>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>